# Local Development Configuration
# Copy this file to .env for local development
# These settings are optimized for development and testing

# ==================================
# AI Model Configuration
# ==================================
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here  # Optional

# Which LLM to use: 'openai' or 'anthropic'
DEFAULT_LLM=openai

# ==================================
# MCP Server Connection
# ==================================
# Local development
MCP_SERVER_URL=http://localhost:8000
# Production server (uncomment to test against production MCP)
# MCP_SERVER_URL=https://web-production-66f9.up.railway.app

MCP_SERVER_TIMEOUT=45

# ==================================
# Development Settings
# ==================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# ==================================
# Web Server Configuration
# ==================================
HOST=127.0.0.1
PORT=8001

# CORS origins (comma-separated, optional - defaults are used if not set)
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate limiting
RATE_LIMIT_PER_MINUTE=120

# ==================================
# User Preferences (Customize these!)
# ==================================
USER_NAME=Developer
USER_LOCATION=San Francisco
DEFAULT_COMMUTE_ORIGIN=Home
DEFAULT_COMMUTE_DESTINATION=Office

# ==================================
# Feature Flags
# ==================================
ENABLE_MEMORY=true
